<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.hoyotech.prison.model">
    <class name="Post">
        <id name="postid" type="java.lang.Integer">
            <generator class="native" />
        </id>
        <property name="userid" type="java.lang.Integer">
            <column name="userid" length="100" not-null="true"/>
        </property>
        <property name="topic" type="java.lang.String">
            <column name="topic" length="100" not-null="true"/>
        </property>
         <property name="matter" type="java.lang.String">
            <column name="matter" length="100"  not-null="true"/>
         </property>
         <property name="postTime" type="java.lang.String">
            <column name="postTime" length="100" not-null="true"/>
        </property>
       
    </class>
</hibernate-mapping>