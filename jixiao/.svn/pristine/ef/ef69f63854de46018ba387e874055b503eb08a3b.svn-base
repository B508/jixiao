.wwFormTable{
  width: 100%; 
  tr{
    height:50px;
    td{
      border-bottom: 1px solid #EEEEEE;
      input{
        width:80%;
      }
      &.tdLabel{
        width:180px;
      }
    }
  }
  tr[errorfor] {
    height:10px;
    td{
      vertical-align :bottom;
    }
  }
  .errorLabel{
    color:red;
  }
  .errorMessage{
    color:red;
  }
}
.tdLabel{
    text-align: right;
}
.detail_row{
  overflow: hidden;
  border-bottom: 1px solid #DDDDDD ;
  .detail_item{
    width: 40%;
    float:left;
    overflow:hidden;
    label{
      height:30px;
      line-height:30px;
      float:left;
      text-align:left;
      display:block;
      color: #888;
      font-weight: bold;
      padding-left: 10px;
      width: 120px;
    }
    div{
      margin-left:15px;
      overflow:hidden;
      white-space:normal;
      word-break:break-all;
      word-wrap : break-word;
      padding: 5px 10px; 
    }
  }
}
.nomargin{
  margin: 0;
}
.nopadding{
  padding: 0;
}
#page-info{
  float:right;
}
.pagecount{
  float: right;
  margin-right:10px;
  line-height:27px;
  color:#444444;
}
.searcharea{
  position: relative;
  background-color: #E5E5E5;
  border-bottom: 1px solid #D6D6D6;
  box-shadow: 0 0 1px #FFFFFF;
  padding-left: 10px;
  padding:3px 20px 0 20px;
  overflow:hidden;
  min-height:33px;
  div{
    float: left;
    margin-right:20px;
    margin-top:5px;
    margin-bottom:5px;
    input{
      width:130px;
      margin-left:3px;
      margin-bottom:0;
    }
    select{
      width:130px;
      margin-left:3px;
    }
  }
  label{
    margin-top:5px;
    float: left;
    display:inline-block;
    width:88px;
    text-align:right;
  }
  button{
    position: absolute;
    top:3px;
    right:23px;
  }
}
.form-row{
  overflow: hidden;
  padding-left:39px;
  margin-top: 10px;
  zoom:1;
  .detail{
    float: left;
    width:48%;
    *display:inline;
    span{
      width:155px;
      text-align:left;
      display:inline-block;
      label{
        background:none;
        color: #888888;
        font-weight: bold;
        height: 30px;
        line-height: 30px;
        font-size:14px;
        text-shadow:none;
      }
    }
    span.help-inline{
      text-align:left;
      width:auto;
      display:inline-block;
    }
  }
  input{
    margin: 0;
  }
  select{
    margin: 0;
  }
}
th.index{
  width:30px;
}
td.index{
  text-align:center;
}

