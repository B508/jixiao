<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.hoyotech.prison.bean">
	<class name="DrugManage" table="drugmanage">
		<comment></comment>
		<id name="id" column="id">
			<generator class="uuid.hex" />
		</id>
		<property name="drugName" type="string">
			<column name="drug_name" length="50">
			</column>
		</property>
		<many-to-one name="drugType" class="DrugType" fetch="select" lazy="false">
            <column name="drug_type" not-null="false" />
        </many-to-one>
		<property name="produceFactory" type="string">
			<column name="produce_factory" length="50">
			</column>
		</property>
		<property name="batch" type="string">
			<column name="batch" length="50">
			</column>
		</property>
		<property name="updateTime" type="java.util.Date">
			<column name="update_time" not-null="false" />
		</property>
		<property name="addTime" type="java.util.Date">
			<column name="add_time" not-null="true" />
		</property>
		<property name="prisonCode" type="java.lang.String">
			<column name="prison_code" not-null="false" />
		</property>
		<property name="isSync" type="int">
			<column name="is_sync" length="1" />
		</property>
	</class>
</hibernate-mapping>
